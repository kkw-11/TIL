package javastudy;

public class OperatorExam {
//산술연산자
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int i1 = -5;
		int i2 = +i1;
		int i3 = -i1;
		
		System.out.println(i1);
		System.out.println(i2);
		System.out.println(i3);
		
		int i4 = ++i3; //i3 = i3 +1; 더한값을 i4에 넣어줌
		System.out.println(i4);
		System.out.println(i3);
		int i5 = i3++; // 값을 대입 후 i3이 1 증가함

		System.out.println(i5);
		System.out.println(i3);
		
		int i = 5;
		int j = 2;
		
		System.out.println(i+j);
		System.out.println(i-j);
		System.out.println(i*j);
		System.out.println(i/j); //정수 끼리의 연산은 정수값으로만 리턴, 실수값을 반환받고 싶으면 피연산자 둘중 하나는 실수 여야한다.
		System.out.println(i/(double)j); //정수 끼리의 연산은 정수값으로만 리턴, 실수값을 반환받고 싶으면 피연산자 둘중 하나는 실수 여야한다.
		System.out.println(i%j); 
		
	}

}
